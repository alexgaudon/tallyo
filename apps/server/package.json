{
  "name": "server",
  "main": "dist/src/start.js",
  "type": "module",
  "scripts": {
    "docker:build": "docker build -f apps/server/Dockerfile .",
    "build": "tsc && tsc-alias",
    "build:full": "npm run build && cd ../web && npm run build && mkdir -p ../server/public && cp -r dist/* ../server/public/",
    "check-types": "tsc --noEmit",
    "dev": "tsx watch src/start.ts",
    "start": "node dist/src/start.js",
    "db:backup": "./backup-db.sh",
    "db:restore": "./restore-db.sh",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "tsx src/db/seed.ts"
  },
  "dependencies": {
    "@orpc/client": "^1.10.2",
    "@orpc/openapi": "^1.11.0",
    "@orpc/server": "^1.10.2",
    "@orpc/zod": "^1.11.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.11.10",
    "pg": "^8.16.3",
    "winston": "^3.18.3",
    "zod": "^4.1.12",
    "@hono/node-server": "^1.19.9",
    "bcrypt": "^6.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.19.11",
    "@types/pg": "^8.15.6",
    "drizzle-kit": "^0.31.5",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}