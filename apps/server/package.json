{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsc && tsc-alias",
		"build:full": "npm run build && cd ../web && npm run build && mkdir -p ../server/public && cp -r dist/* ../server/public/",
		"check-types": "tsc --noEmit",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "bun run --hot src/index.ts",
		"db:backup": "./backup-db.sh",
		"db:restore": "./restore-db.sh",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:seed": "bun run src/db/seed.ts"
	},
	"dependencies": {
		"date-fns": "^4.1.0",
		"@orpc/client": "^1.10.2",
		"@orpc/server": "^1.10.2",
		"better-auth": "^1.3.32",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.44.7",
		"hono": "^4.10.3",
		"pg": "^8.16.3",
		"winston": "^3.18.3",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"tsc-alias": "^1.8.16",
		"typescript": "^5.9.3",
		"@types/bun": "^1.3.1",
		"drizzle-kit": "^0.31.5",
		"@types/pg": "^8.15.6"
	}
}