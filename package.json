{
	"name": "tallyo-rewrite",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"check": "biome check --write .",
		"prepare": "husky",
		"dev": "turbo dev --filter=web --filter=server",
		"build": "turbo build --filter=web --filter=server",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"db:push": "turbo -F server db:push",
		"db:studio": "turbo -F server db:studio",
		"db:generate": "turbo -F server db:generate",
		"db:migrate": "turbo -F server db:migrate",
		"db:dev": "docker compose up -d postgres",
		"db:dev:attached": "docker compose up postgres",
		"db:down": "docker compose down",
		"db:seed": "turbo -F server db:seed"
	},
	"dependencies": {
		"csv-parse": "^6.1.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.4",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"turbo": "^2.8.10"
	},
	"lint-staged": {
		"*": "npm run check"
	},
	"packageManager": "npm@10.8.2"
}
